%h1= professor.first_name + " " + professor.last_name + ", " + professor.title

%p#notice= notice

%p
  %b Subjects:
  - if professor.subjects.count == 0 
    None
  - else
    = professor.subjects.join(', ') 

%div
  .votes.likes
    %span.votes-nr= professor.get_likes.size
    %a{:href => upvote_professor_path(professor), :class => 'btn'}
      .span.glyphicon.glyphicon-thumbs-up
  .votes.dislikes
    %span.votes-nr= professor.get_dislikes.size
    %a{:href => downvote_professor_path(professor), :class => 'btn'}
      .span.glyphicon.glyphicon-thumbs-down

%p
  %b Comments:
%table#comments
  - professor.comments.each do |comment|
    %tr
      %td= comment.user.name
      %td= comment.content
%p
  %b Add comment:
  = render 'comments/form'

= button_to 'Edit', edit_professor_path(professor)

= button_to 'Back', professors_path
