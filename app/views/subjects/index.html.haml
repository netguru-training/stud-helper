%h1 Listing subjects

%table
  %thead
    %tr
      %th Name
      %th Short name
      %th Description
      %th
      %th
      %th

  - if current_user.admin?
    = link_to "Add new subject", new_subject_path

  %tbody
    - subjects.each do |subject|
      %tr
        %td= subject.name
        %td= subject.short_name
        %td= subject.description
        %td= link_to 'Show', subject
        %td= link_to 'Edit', edit_subject_path(subject)
        %td= link_to 'Destroy', subject, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Subject', new_subject_path
